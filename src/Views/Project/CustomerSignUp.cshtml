@model ProjectA_MVC.Models.Customer_Tbl
@{
    ViewBag.Title = "CustomerSignUp";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up Page</title>
    <link href="~/Bootstrap/Css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Bootstrap/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Bootstrap/JS/bootstrap.min.js"></script>
    <script src="~/Bootstrap/JS/popper.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light">
            <img src="~/Images/Cargo1.jpeg" width="200px" height="100px" />
            <div class="collapse navbar-collapse" id="navbarSupportContent">
                <ul class="navbar-nav d-flex me-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Project") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "About", "Project") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Terms", "Terms", "Project") &nbsp;&nbsp;
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item active">
                        @Html.ActionLink("User Login", "CustomerLogin", "Project") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Executive Login", "ExecutiveLogin", "Project") &nbsp;&nbsp;
                    </li>
                </ul>

            </div>
        </nav>
    </div>
    <h3><strong class="text-danger">@TempData["Message"]</strong></h3>
    <div id="login">
        @using (Html.BeginForm("CustomerSignUp", "Project", FormMethod.Post))
        {

            <div class="container">
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <center>
                                            <img src="~/Images/generaluser.png" width="100px" />
                                        </center>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <center>
                                            <h4>Customer Registration</h4>
                                        </center>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <hr>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @style = "width=600px;" })
                                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Age</label>
                                            @Html.TextBoxFor(x => x.Age, new { @class = "form-control", @style = "width=600px;" })
                                            @Html.ValidationMessageFor(x => x.Age, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Address</label>
                                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @style = "width=600px;" })
                                            @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email Id</label>
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @style = "width=600px;" })
                                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Password</label>
                                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @style = "width=600px;" })
                                            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            @Html.TextBoxFor(x => x.ConfirPassword, new { @class = "form-control", @type = "password", @style = "width=600px;" })
                                            @Html.ValidationMessageFor(x => x.ConfirPassword, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success btn-md" value="Submit" style="width:600px;" /> &nbsp;
                                    <input type="reset" class="btn btn-warning btn-md" value="Reset" style="width:600px;" />
                                </div>
                            </div>
                            @Html.ActionLink(">>>>>Executive SignUp", "ExecutiveSignUp", "Project") <br />
                           
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
